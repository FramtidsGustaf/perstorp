{
	"compilerOptions": {
		"module": "Preserve",
		"moduleDetection": "force",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"outDir": "lib-test",
		"declaration": true,
		"pretty": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
